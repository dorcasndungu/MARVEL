{{#partial "content"}}

    <h6 class="py-3 text-center">Create heroes of your choice and place them in your desired squads.</h6>
        <h3 class="text-center fs-1 fw-bolder text-danger py-2">Squads</h3>

        <div class="container px-3 ">
            {{#if squads}}

                {{#each squads}}

                    <div class="card border border-danger mb-3">
                        <div class="card-body">
                            <h5 class="card-title text-danger">{{name}}</h5>
                            <p class="card-text">Size: {{maxSize}}</p>
                            <p class="card-text">Cause: {{cause}}</p>

                        </div>
                        <div class="d-flex justify-content-center gap-3 mb-2">
                            <a href="/squads/{{id}}"><button class="btn btn-danger">Details</button></a>
                            <a href="/squads/{{id}}/update"><button class="btn btn-danger">Update</button></a>
                            <a href="/squads/{{id}}/delete"><button class="btn btn-danger">delete</button></a>
                        </div>
                    </div>

                {{/each}}
            </div>
                <a class="text-decoration-none" href="/squad/delete"><button class="btn btn-danger d-block mx-auto">Delete all</button></a>

            {{else}}
                <p class="fs-3 display-5 fw-bolder text-center">No squads at the moment... <a class="text-decoration-none text-primary" href="/squad/new">create one to continue</a></p>
            {{/if}}



{{/partial}}
{{>layout.hbs}}