{{#partial "content"}}
        {{#each heroes}}
                <div class="card border border-danger mb-2">
                    <div class="card-body">
                        <h5 class="card-title text-danger">{{name}}</h5>
                        <p class="card-text">Age: {{heroes.age}}</p>
                        <p class="card-text">Power: {{heroes.power}}</p>
                        <p class="card-text">Weakness: {{heroes.weakness}}</p>
                    </div>
                    <div class="d-flex justify-content-center gap-3 mb-2">
                        <a href="/squads/{{heroes.id}}"><button class="btn btn-danger">Details</button></a>
                        <a href="/squads/{{heroes.id}}/update"><button class="btn btn-danger gap-3">Update</button></a>
                        <a href="/squads/{{heroes.id}}/delete"><button class="btn btn-danger">delete</button></a>
                    </div>
                </div>
        {{/each}}

        <a class="text-decoration-none" href="/squad/delete"><button class="btn btn-danger d-block mx-auto">Delete all</button></a>
{{/partial}}
{{> layout.hbs}}