{{#partial "content"}}

    {{#if heroes}}
        <h1 class="text-center">Heroes in <span class="text-danger">{{squad.name}}</span></h1>
        {{#each heroes}}
                <div class="card border border-danger mb-2">
                    <div class="card-body">
                        <h5 class="card-title display-3 text-center text-danger">{{name}}</h5>
                        <p class="card-text">Age: <span class="text-danger">{{age}}</span></p>
                        <p class="card-text">Power: <span class="text-danger">{{power}}</span></p>
                        <p class="card-text">Weakness: <span class="text-danger">{{weakness}}</span></p>
                    </div>
                    <div class="d-flex justify-content-center gap-3 mb-2">
                        <a href="/squads/{{squad.id}}/heroes/{{id}}"><button class="btn btn-danger">Details</button></a>
                        <a href="/hero/{{id}}/update"><button class="btn btn-danger gap-3">Update</button></a>
                        <a href="/heroes/{{id}}/delete"><button class="btn btn-danger">delete</button></a>
                    </div>
                </div>
        {{/each}}
        <a class="text-decoration-none" href="/squad/delete"><button class="btn btn-danger d-block mx-auto">Delete all</button></a>
    {{else}}
        <p class="fs-3 display-2  fw-bolder text-center mt-4 pt-3">Sorry you have no heroes in <span class="text-danger">{{squad.name}}</span>...<a class="text-decoration-none text-primary " href="/hero/new"> create one</a></p>
    {{/if}}

{{/partial}}
{{> layout.hbs}}