{{#partial "content"}}
    <div class="row pt-5">
        <div class="col-md-4"></div>
    {{#if edit}}
            <div class="col-md-4  mt-5">
                <form action="/squad/{{squad.id}}" class="mx-4 px-3" method="post">
                    <div class="form-group mb-4">
                        <label for="name" class="fs-4 mb-2">Squad Name:</label>
                        <input type="text" class="form-control" id="newName" name="newName" value="{{squad.name}}">
                    </div>
                    <div class="form-group mb-4">
                        <label for="maxSize" class="fs-4 mb-2">Squad Size:</label>
                        <input type="number" class="form-control" id="newSize" name="newSize" value="{{squad.maxSize}}">
                    </div>
                    <div class="form-group mb-4">

                        <label for="cause" class="fs-4 mb-2">Cause:</label>
                        <input type="text" class="form-control" id="newCause" name="newCause" value="{{squad.cause}}">
                    </div>

                    <button class="btn btn-danger d-block mx-auto" type="submit">Update Squad</button>
                </form>
            </div>

    {{else}}

            <div class="col-md-4  mt-5">
                <form action="/squads" method="post">
                    <div class="form-group mb-4">
                        <label for="name" class="fs-4 mb-2">Squad Name:</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="form-group mb-4">
                        <label for="maxSize" class="fs-4 mb-2">Squad Size:</label>
                        <input type="number" class="form-control" id="size" name="size">
                    </div>
                    <div class="form-group mb-4">

                        <label for="cause" class="fs-4 mb-2">Cause:</label>
                        <input type="text" class="form-control" id="cause" name="cause">
                    </div>

                    <button class="btn btn-danger d-block mx-auto mb-2" type="submit">Add Squad</button>

                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    {{/if}}
{{/partial}}

{{>layout.hbs}}